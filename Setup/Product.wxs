<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <Product Id="*" Name="$(var.VertShot.ProjectName)" Language="1031" Version="1.0.0.0" Manufacturer="Oliver Kädtler" UpgradeCode="f09464f9-f881-494a-93cd-9cb765a3f1c2">
    <Package Id="*" Manufacturer="Oliver Kädtler" InstallerVersion="200" Compressed="yes" InstallScope="perMachine" />

    <Media Id='1' Cabinet='setup.cab' EmbedCab='no' DiskPrompt='CD-ROM #1' />
    <Property Id='DiskPrompt' Value="VertShot [1]" />

    <Directory Id="TARGETDIR" Name="SourceDir">
      <Directory Id="ProgramFilesFolder" Name="PFiles">
        <Directory Id="INSTALLDIR" Name="VertShot">
          <Component Id="MainExecutable" Guid="*">
            <File Id="VertShotEXE" Name="$(var.VertShot.TargetFileName)" DiskId="1" Source="$(var.VertShot.TargetPath)" KeyPath="yes">
              <Shortcut Id="startmenuVertShot" Directory="ProgramMenuDir" Name="$(var.VertShot.ProjectName)" WorkingDirectory="INSTALLDIR" Icon="$(var.VertShot.TargetFileName)" IconIndex="0" Advertise="yes"/>
              <Shortcut Id="desktopVertShot" Directory="DesktopFolder" Name="$(var.VertShot.ProjectName)" WorkingDirectory="INSTALLDIR" Icon="$(var.VertShot.TargetFileName)" IconIndex="0" Advertise="yes"/>
            </File>
          </Component>
        </Directory>
      </Directory>
      
      <Directory Id="ProgramMenuFolder" Name="Programs">
        <Directory Id="ProgramMenuDir" Name="$(var.VertShot.ProjectName)">
          <Component Id="ProgramMenuDir" Guid="*">
            <RemoveFolder Id="ProgramMenuDir" On="uninstall"/>
            <RegistryValue Root="HKCU" Key="Software\[Manufacturer]\[ProductName]" Type="string" Value="" KeyPath="yes"/>
          </Component>
        </Directory>
      </Directory>
      
      <Directory Id="DesktopFolder" Name="Desktop"/>
    </Directory>
    
    



    <Feature Id="Complete" Title="VertShot" Description="The main Component" Display="expand" Level="1" ConfigurableDirectory="INSTALLDIR" Absent="disallow" AllowAdvertise="no">
      <ComponentRef Id="MainExecutable"/>
      <ComponentRef Id="ProgramMenuDir"/>
      <ComponentGroupRef Id="ContentGroup"/>
    </Feature>

    <Icon Id="VertShot.exe" SourceFile="$(var.VertShot.TargetPath)"/>


    <Property Id="WIXUI_INSTALLDIR" Value="INSTALLDIR" />

    <UIRef Id="WixUI_Mondo" />
    <UIRef Id="WixUI_ErrorProgressText" />

  </Product>
</Wix>